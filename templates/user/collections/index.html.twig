{% extends 'app.html.twig' %}

{% block title %}My Collections{% endblock %}

{% block content %}
    <h1>My Collections ({{ collections|length }})</h1>

    <div class="row mt-3">
        <div class="col-md-3">
            <div class="border bg-white py-5 text-center">
                <i class="fa fa-plus"></i>
            </div>
        </div>

        {% for collection in collections %}
            <div class="col-md-3">
                <a href="" class="text-reset text-decoration-none">
                    <div class="border bg-white p-2">
                        <b>{{ collection.name|e }}</b>
                        <br>
                        {{ collection.description|e }}
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
